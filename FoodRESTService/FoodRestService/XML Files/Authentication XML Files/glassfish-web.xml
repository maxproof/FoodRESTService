<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">

<glassfish-web-app>

	<context-root>/FoodRestService</context-root>

	<!-- link a web.xml role with a GF role -->
	<security-role-mapping>
		<!-- value of the <role-name> element in web.xml -->
		<role-name>admin</role-name>
		<!-- value of the security group defined in GF -->
		<group-name>wsadmin</group-name>
	</security-role-mapping>

	<!-- link a web.xml role with a GF role -->
	<security-role-mapping>
		<!-- value of the <role-name> element in web.xml -->
		<role-name>user</role-name>
		<!-- value of the security group defined in GF -->
		<group-name>wsuser</group-name>
	</security-role-mapping>

</glassfish-web-app>
